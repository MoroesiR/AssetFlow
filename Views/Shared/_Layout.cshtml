<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssetFlow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-boxes me-2"></i><strong>AssetFlow</strong>
                    <small class="text-muted ms-2" style="font-size: 0.8rem;">IT Asset Management</small>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                                   asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-chart-bar me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Assets" ? "active" : "")"
                                   asp-controller="Assets" asp-action="Index">
                                    <i class="fas fa-box me-1"></i>Assets
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-chart-bar me-1"></i>Reports
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="AssetValueReport">
                                            <i class="fas fa-chart-pie me-2"></i>Asset Value
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="CheckoutHistory">
                                            <i class="fas fa-history me-2"></i>Checkout History
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="MaintenanceSchedule">
                                            <i class="fas fa-tools me-2"></i>Maintenance Schedule
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="ExportAssets">
                                            <i class="fas fa-file-export me-2"></i>Export Data
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/swagger" target="_blank">
                                    <i class="fas fa-code me-1"></i>API
                                </a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-4">
        <div class="container">
            <div class="row">
                <div class="col">
                    <span class="text-muted">
                        <i class="fas fa-building me-1"></i> Company Internal System •
                        <i class="fas fa-shield-alt ms-3 me-1"></i> Restricted Access •
                        Version 2.1.4
                    </span>
                </div>
                <div class="col-auto">
                    <span class="text-muted">
                        IT Department • Last Updated: @DateTime.Now.ToString("yyyy-MM-dd")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
     
</body>
</html>
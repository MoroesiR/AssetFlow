@model AssetFlow.Models.Asset

@{
    ViewData["Title"] = "Delete Asset";
}

<div class="container">
    <h1 class="text-danger">Delete Asset</h1>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>

    <div class="alert alert-danger">
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            This action cannot be undone. The asset will be permanently removed from the system.
        </p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Asset Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Asset Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Serial Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SerialNumber)</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Status == "Available" ? "bg-success" :
                                                                  Model.Status == "CheckedOut" ? "bg-warning" :
                                                                  Model.Status == "Maintenance" ? "bg-danger" : "bg-secondary")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <dt class="col-sm-4">Purchase Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PurchasePrice)</dd>

                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>

                @if (!string.IsNullOrEmpty(Model.CheckedOutToEmployee))
                {
                    <dt class="col-sm-4">Checked Out To</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckedOutToEmployee)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.Vendor))
                {
                    <dt class="col-sm-4">Vendor</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Vendor)</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="deleteReason" class="form-label">Reason for deletion (optional):</label>
            <textarea id="deleteReason" name="deleteReason" class="form-control" rows="3"
                      placeholder="Enter reason for deleting this asset..."></textarea>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
            <label class="form-check-label" for="confirmDelete">
                I understand this action is permanent and cannot be undone
            </label>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                <i class="fas fa-trash me-1"></i>Delete Asset
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        
        document.getElementById('confirmDelete').addEventListener('change', function() {
            document.getElementById('deleteButton').disabled = !this.checked;
        });

        
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('Are you sure you want to delete this asset? This action cannot be undone.')) {
                e.preventDefault();
            }
        });
    </script>
}
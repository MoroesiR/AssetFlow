@model AssetFlow.Models.Asset

@{
    ViewData["Title"] = "Mark for Maintenance";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="fas fa-tools me-2"></i>Mark for Maintenance</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h5 class="alert-heading">Asset: @Model.Name</h5>
                        <p class="mb-0">Serial: @Model.SerialNumber</p>
                    </div>

                    <form asp-action="MarkMaintenance">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label for="nextMaintenanceDue" class="form-label">Next Maintenance Due Date (Optional)</label>
                            <input type="date" class="form-control" id="nextMaintenanceDue" name="nextMaintenanceDue"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <div class="form-text">Leave empty if maintenance date is unknown</div>
                        </div>

                      
                        <div class="mb-3">
                            <label for="maintenanceNotes" class="form-label">Maintenance Notes (Optional)</label>
                            <textarea class="form-control" id="maintenanceNotes" name="maintenanceNotes" rows="3"
                                      placeholder="Describe what maintenance is needed..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <p class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                This will change the asset status to "Maintenance" and flag it for repair/service.
                                The asset will not be available for checkout until marked as available again.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-tools me-1"></i>Mark for Maintenance
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
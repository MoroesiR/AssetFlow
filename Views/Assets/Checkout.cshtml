@model AssetFlow.Models.Asset

@{
    ViewData["Title"] = "Checkout Asset";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Assets</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
            <li class="breadcrumb-item active">Checkout</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Checkout Asset</h4>
                </div>
                <div class="card-body">
                  
                    <div class="alert alert-info mb-4">
                        <h5 class="alert-heading">Asset Details</h5>
                        <p class="mb-1"><strong>Name:</strong> @Model.Name</p>
                        <p class="mb-1"><strong>Serial:</strong> @Model.SerialNumber</p>
                        <p class="mb-0"><strong>Category:</strong> @Model.Category</p>
                    </div>

                    <form asp-action="Checkout">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CheckedOutToEmployee" class="form-label">Employee Name *</label>
                                <input asp-for="CheckedOutToEmployee" class="form-control" required />
                                <span asp-validation-for="CheckedOutToEmployee" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EmployeeEmail" class="form-label">Employee Email *</label>
                                <input asp-for="EmployeeEmail" class="form-control" type="email" required />
                                <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="EmployeeDepartment" class="form-label">Department</label>
                                <select asp-for="EmployeeDepartment" class="form-select">
                                    <option value="">Select Department</option>
                                    <option value="IT">IT Department</option>
                                    <option value="Marketing">Marketing</option>
                                    <option value="Sales">Sales</option>
                                    <option value="HR">Human Resources</option>
                                    <option value="Finance">Finance</option>
                                    <option value="Operations">Operations</option>
                                    <option value="Engineering">Engineering</option>
                                </select>
                                <span asp-validation-for="EmployeeDepartment" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ExpectedReturnDate" class="form-label">Expected Return Date *</label>
                                <input asp-for="ExpectedReturnDate" class="form-control" type="date"
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="ExpectedReturnDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CheckoutNotes" class="form-label">Notes (Optional)</label>
                            <textarea asp-for="CheckoutNotes" class="form-control" rows="3"
                                      placeholder="Reason for checkout, special instructions, etc."></textarea>
                            <span asp-validation-for="CheckoutNotes" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Important</h6>
                            <p class="mb-0">
                                By checking out this asset, you confirm that:
                                <ul class="mb-0">
                                    <li>The employee has received the asset in good condition</li>
                                    <li>The employee is responsible for the asset until return</li>
                                    <li>Any damage/loss must be reported immediately</li>
                                </ul>
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-1"></i>Confirm Checkout
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set minimum date for expected return to tomorrow
        document.getElementById('ExpectedReturnDate').min = new Date().toISOString().split('T')[0];
    </script>
}
@model List<AssetFlow.Controllers.CheckoutHistoryViewModel>

@{
    ViewData["Title"] = "Checkout History";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-history text-primary me-2"></i>Checkout History</h1>
            <p class="text-muted mb-0">Recent asset checkouts and returns</p>
        </div>
        <div>
            <div class="btn-group">
                <a asp-action="CheckoutHistory" asp-route-days="7" class="btn btn-outline-secondary btn-sm">7 Days</a>
                <a asp-action="CheckoutHistory" asp-route-days="30" class="btn btn-outline-secondary btn-sm active">30 Days</a>
                <a asp-action="CheckoutHistory" asp-route-days="90" class="btn btn-outline-secondary btn-sm">90 Days</a>
                <a asp-action="CheckoutHistory" asp-route-days="365" class="btn btn-outline-secondary btn-sm">1 Year</a>
            </div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Asset</th>
                                <th>Checked Out To</th>
                                <th>Checkout Date</th>
                                <th>Expected Return</th>
                                <th>Actual Return</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-medium">@item.AssetName</div>
                                        <small class="text-muted">@item.AssetSerial</small>
                                    </td>
                                    <td>
                                        <div>@item.EmployeeName</div>
                                        <small class="text-muted">@item.Department</small>
                                    </td>
                                    <td>@item.CheckoutDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (item.ExpectedReturnDate.HasValue)
                                        {
                                            <span class="@(item.ExpectedReturnDate.Value < DateTime.Today && item.ActualReturnDate == null ? "text-danger fw-bold" : "")">
                                                @item.ExpectedReturnDate.Value.ToString("MMM dd, yyyy")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ActualReturnDate.HasValue)
                                        {
                                            <span class="text-success">@item.ActualReturnDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Not Returned</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = item.Status switch
                                            {
                                                "CheckedOut" => "badge bg-warning",
                                                "Available" => "badge bg-success",
                                                _ => "badge bg-secondary"
                                            };
                                        }
                                        <span class="@badgeClass">@item.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-history fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No checkout history found</h4>
            <p class="text-muted">No assets have been checked out in the selected period.</p>
        </div>
    }
</div>
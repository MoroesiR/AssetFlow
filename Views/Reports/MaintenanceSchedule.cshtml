@model List<AssetFlow.Controllers.MaintenanceScheduleViewModel>

@{
    ViewData["Title"] = "Maintenance Schedule";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="fas fa-calendar-alt text-warning me-2"></i>Maintenance Schedule</h1>
            <p class="text-muted mb-0">Upcoming and overdue maintenance</p>
        </div>
        <div>
            <a asp-controller="Reports" asp-action="AssetValueReport" class="btn btn-outline-secondary">
                <i class="fas fa-chart-pie me-1"></i>Asset Value
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h5 class="card-title">Overdue</h5>
                        <h2 class="mb-0">@Model.Count(m => m.DaysUntilDue < 0)</h2>
                        <small>Assets past due date</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Due Soon</h5>
                        <h2 class="mb-0">@Model.Count(m => m.DaysUntilDue >= 0 && m.DaysUntilDue <= 30)</h2>
                        <small>Due within 30 days</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Future</h5>
                        <h2 class="mb-0">@Model.Count(m => m.DaysUntilDue > 30)</h2>
                        <small>Due after 30 days</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Asset</th>
                                <th>Serial</th>
                                <th>Category</th>
                                <th>Last Maintenance</th>
                                <th>Next Due</th>
                                <th>Days Until Due</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(m => m.DaysUntilDue))
                            {
                                <tr class="@(item.DaysUntilDue < 0 ? "table-danger" : item.DaysUntilDue <= 7 ? "table-warning" : "")">
                                    <td>
                                        <div class="fw-medium">@item.AssetName</div>
                                        @if (!string.IsNullOrEmpty(item.MaintenanceNotes))
                                        {
                                            <small class="text-muted">@item.MaintenanceNotes</small>
                                        }
                                    </td>
                                    <td><code>@item.SerialNumber</code></td>
                                    <td><span class="badge bg-light text-dark">@item.Category</span></td>
                                    <td>
                                        @if (item.LastMaintenanceDate.HasValue)
                                        {
                                            @item.LastMaintenanceDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td class="fw-medium">@item.NextMaintenanceDue.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (item.DaysUntilDue < 0)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                @(Math.Abs(item.DaysUntilDue)) days overdue
                                            </span>
                                        }
                                        else if (item.DaysUntilDue == 0)
                                        {
                                            <span class="badge bg-warning">Due today</span>
                                        }
                                        else
                                        {
                                            <span class="badge @(item.DaysUntilDue <= 7 ? "bg-warning" : "bg-info")">
                                                @item.DaysUntilDue days
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(item.Status == "Maintenance" ? "bg-danger" : "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-controller="Assets" asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Assets" asp-action="MarkMaintenance" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning ms-1" title="Update Maintenance">
                                            <i class="fas fa-tools"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
            <h4 class="text-success">No maintenance scheduled!</h4>
            <p class="text-muted">All assets are up to date with maintenance.</p>
            <p class="text-muted">
                To schedule maintenance, go to an asset's details page and click "Mark for Maintenance".
            </p>
        </div>
    }

    <div class="mt-4">
        <div class="alert alert-info">
            <h6><i class="fas fa-info-circle me-2"></i>Maintenance Legend</h6>
            <div class="row">
                <div class="col-md-4">
                    <span class="badge bg-danger">Red</span> = Overdue maintenance
                </div>
                <div class="col-md-4">
                    <span class="badge bg-warning">Yellow</span> = Due within 7 days
                </div>
                <div class="col-md-4">
                    <span class="badge bg-info">Blue</span> = Future maintenance
                </div>
            </div>
        </div>
    </div>
</div>